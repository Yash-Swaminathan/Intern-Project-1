    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python Debugger: Module",
            "type": "debugpy",
            "request": "launch",
            "module": "poetry",
            "args": [
                "run",
                "uvicorn",
                "intern_project.main:APP",
                "--port",
                "8000",
                "--reload",
            ],
            "console": "integratedTerminal",
            "cwd": "C:\\Intern Project\\Intern-Project-1",
            "env": {
                "POETRY_ACTIVE": "1"
            },
        },
        {
            "name": "Python Debugger: Poetry + Uvicorn",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "intern_project.main:APP",
                "--port",
                "8000",
                "--reload"
            ],
            "console": "integratedTerminal",
            "cwd": "C:\\Intern Project\\Intern-Project-1",
            "env": {
                "POETRY_ACTIVE": "1"
            },
            "justMyCode": true
        }
    ]
}

